generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  email     String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  id        String       @id @default(cuid())
  weight    UserWeight[]
}

model Training {
  id        String     @id
  createdAt DateTime   @default(now())
  level     String
  play      Int
  thumbnail String
  title     String
  calendars Calendar[]
}

model UserWeight {
  id        String     @id @default(cuid())
  weight    Float
  createdAt DateTime   @default(now())
  userId    String
  calendars Calendar[]
  user      User       @relation(fields: [userId], references: [id])
}

model Calendar {
  id        String     @id @default(cuid())
  traingId  String
  weightId  String
  date      DateTime
  createdAt DateTime   @default(now())
  training  Training   @relation(fields: [traingId], references: [id])
  weight    UserWeight @relation(fields: [weightId], references: [id])
}
