generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  weight    UserWeight[]
}

model Training {
  id        String   @id @default(cuid())
  name      String
  url       String
  createdAt DateTime @default(now())
  calendars Calendar[]
}

model UserWeight {
  id        String   @id @default(cuid())
  userId    String
  weight    Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  calendars Calendar[]
}

model Calendar {
  id        String   @id @default(cuid())
  traingId  String
  weightId  String
  date      DateTime
  training  Training @relation(fields: [traingId], references: [id])
  weight    UserWeight @relation(fields: [weightId], references: [id])
  createdAt DateTime @default(now())
}